#:import Text widgets.labels.Text
#:import IconButton widgets.buttons.IconButton
#:import ShadowBox widgets.shadow.ShadowBox

#:import Home views.home.Home

<MainWindow>
    spacing: dp(8)
    canvas.before:
        Color:
            rgba: rgba('#ffffff')
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        id: nav_menu
        size_hint_x: .15
        orientation: 'vertical'
        spacing: dp(20)        
        BoxLayout:
            id: logo_nbox
            size_hint_y: .1
            padding: dp(8)
            Text:
                text: 'Dash Sacoleiro'
                font_name: app.fonts.heading
                font_size: app.fonts.size.h1
                color: app.colors.secondary
                halign: 'center'
        GridLayout:
            id: tabs_box
            cols: 1
            spacing: dp(1)
            size_hint_y: .75
            canvas.before:
                Color:
                    rgba: rgba('#c4c4c4')
                Rectangle:
                    pos: self.pos
                    size: [self.size[0], dp(1)]
            NavTab:
                text: 'Cidades'
                state: 'down'
                icon: 'assets\icons\ic_grid.png'
                icon_active: 'assets\icons\ic_grid_active.png'
                on_press: 
                    root.ids.scrn_mngr.current = "scrn_cidades"
            NavTab:
                text: 'Produtos'
                icon: 'assets\icons\ic_bag.png'
                icon_active: 'assets\icons\ic_bag_active.png'
                on_press: 
                    root.ids.scrn_mngr.current = "scrn_produtos"
            NavTab:
                text: 'Revendedoras'
                icon: 'assets\icons\ic_people.png'
                icon_active: 'assets\icons\ic_people_active.png'
                on_press: 
                    root.ids.scrn_mngr.current = "scrn_revendedoras"

        GridLayout:
            id: sec_box
            size_hint_y: .25
            cols: 1
            NavTab:
                text: 'Sobre'
                icon: 'assets\icons\ic_chat.png'
                icon_active: 'assets\icons\ic_chat_active.png'
            NavTab:
                text: 'Configurações'
                icon: 'assets\icons\ic_settings.png'
                icon_active: 'assets\icons\ic_settings_active.png'
            NavTab:
                text: 'Sair'
                icon: 'assets\icons\ic_signout.png'
                icon_active: 'assets\icons\ic_signout_active.png'
                on_release: app.stop()
    BoxLayout:
        size_hint_x: .85
        spacing: dp(8)
        orientation: 'vertical'
        padding: [dp(16), dp(8), dp(12), dp(8)]
        canvas.before:
            Color:
                rgba: rgba('#f2f2f2')
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            id: actionbar
            size_hint_y: None
            height: dp(64)
            BoxLayout:
                size_hint_x: .7
                orientation: 'vertical'
                padding: dp(16)
                Text:
                    text: root.username
                    font_size: app.fonts.size.h1
                    font_name: app.fonts.heading
                    color: app.colors.secondary
                    size_hint_y: .6
            BoxLayout:
                size_hint_x: .3
        BoxLayout:
            ScreenManager:
                id: scrn_mngr
                Screen:
                    name: 'scrn_cidades'
                    Home:
                        id: home
                Screen:
                    name: 'scrn_produtos'
                    id: produtos
                Screen:
                    name: 'scrn_revendedoras'

<NavTab>:
    background_normal: ''
    background_down: ''
    background_color: [0,0,0,0]
    group: 'tabs'
    size_hint_y: None
    height: dp(48)
    spacing: dp(4)
    canvas.before:
        Color: 
            rgba: [0,0,0,0] if self.state == 'normal' else rgba("#E1F1FF")
        Rectangle:
            pos: self.pos
            size: self.size
        Color: 
            rgba: [0,0,0,0] if self.state == 'normal' else app.colors.primary
        Rectangle:
            pos: [self.pos[0]+(self.size[0]-dp(1)), self.pos[1]]
            size: [dp(8), self.size[1]]
    AnchorLayout:
        size_hint_x: None
        width: self.height
        padding: [dp(24), dp(12), dp(0), dp(12)]
        Widget:
            canvas.before:
                Color: 
                    rgba: [1,1,1,1]
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: root.icon if root.state == 'normal' else root.icon_active
    Text:
        halign: 'center'
        valign: 'middle'
        text: root.text
        color: app.colors.secondary if root.state == 'normal' else app.colors.primary
